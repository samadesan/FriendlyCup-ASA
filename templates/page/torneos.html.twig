{% extends 'base.html.twig' %}
{% block title %} Torneos {% endblock title %}
{% block body %}
    <div class="main-container-torneo">
        <main class="torneo-content">
            <section class="torneo-header-card">
                <div class="header-info">
                    <h1>Nombre Torneo</h1>
                    <p class="fecha-text">Fecha</p>
                </div>
                <div class="header-actions">
                    <a href="#" class="btn-secondary">Unirse/Inscribirse</a>
                    <a href="#" class="btn-cta-round">Seguir</a>
                </div>
            </section>

            <nav class="navigator-torneos">
                <ul>
                    <li><a href="#" class="active">Resumen</a></li>
                    <li><a href="#">Calendario</a></li>
                    <li><a href="#">Clasificación</a></li>
                    <li><a href="#">Stats</a></li>
                </ul>
            </nav>

            <section class="torneo-section">
                <h2>Resumen</h2>
                <div class="data-box">
                    <h3>Próximos Partidos</h3>
                    <div class="placeholder-row"></div>
                    <div class="placeholder-row"></div>
                </div>
                
                <div class="data-box">
                    <h3>Últimos Resultados</h3>
                    <div class="placeholder-row"></div>
                    <div class="placeholder-table"></div>
                </div>
            </section>
        </main>

        <aside class="sidebar-organizador">
            <div class="organizador-card">
                <h3>Organizador</h3>
                <hr>
                <div class="org-info">
                    <div class="img-placeholder">Image</div>
                    <span>Fútbol Fantasy</span>
                </div>
                <div class="org-footer">
                    <div class="img-placeholder-small"></div>
                </div>
            </div>

            <div class="organizador-card link-box">
                <p>Organizador Card</p>
                <a href="#">Enlace para compartir</a>
            </div>

            <button class="btn-fantasy">Crear fantasy ligado</button>
        </aside>
    </div>
{% endblock %}