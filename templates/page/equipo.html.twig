{% extends 'base.html.twig' %}

{% block title %}Detalles del Equipo: {{ equipo.nombre }}{% endblock %}

{% block body %}
    <div class="editar-torneo">
        <div id="RLCBlock">
            <h1>{{ equipo.nombre }}</h1>
        </div>

        <div class="equipos">


            <table class="stats-table">
                <thead>
                <tr>
                    <th>Torneo</th>
                    <th>Puntos</th>
                </tr>
                </thead>
                <tbody>
                <tr>
                    <td>{{ torneo.name }}</td>
                    <td>
                    <span class="btn-cta-round" style="color:#fff;">
                        {{ puntos }}
                    </span>
                    </td>
                </tr>
                </tbody>
            </table>

            <a href="{{ path('inicio') }}" class="volver" style="margin-top:15px; display:inline-block;">
                Volver al inicio
            </a>
        </div>

        <hr>

        <div class="stats-table-container">
            <div style="display:flex; justify-content: space-between; align-items:center;">
                <h3>Plantilla de Jugadores</h3>

                {% if jugadores is not empty %}
                    <a href="{{ path('crearjugador', {'id': equipo.id}) }}" class="volver">
                        + Añadir jugador
                    </a>
                {% endif %}
            </div>

            {% if jugadores is empty %}
                <p style="margin-top: 20px;">
                    Aún no hay jugadores inscritos en este equipo.
                </p>

                <a href="{{ path('crearjugador', {'id': equipo.id}) }}" class="volver">
                    Añadir el primer jugador
                </a>
            {% else %}
                <table class="stats-table">
                    <thead>
                    <tr>
                        <th>ID</th>
                        <th>Nombre</th>
                        <th>Acciones</th>
                    </tr>
                    </thead>
                    <tbody>
                    {% for jugador in jugadores %}
                        <tr>
                            <td>{{ jugador.id }}</td>
                            <td>{{ jugador.nombre }}</td>
                            <td>
                                <a href="{{ path('jugadoreliminado', {'id': jugador.id}) }}"
                                   class="btn-danger">
                                    Eliminar
                                </a>
                                <a href="{{ path('modificarjugador', {'id': jugador.id}) }}"
                                   class="btn-secondary">
                                    Modificar
                                </a>
                            </td>
                        </tr>
                    {% endfor %}
                    </tbody>
                </table>
            {% endif %}
        </div>
    </div>
{% endblock %}